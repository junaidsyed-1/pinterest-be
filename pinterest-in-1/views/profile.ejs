<% include ./partials/header.ejs %>

<div class="profile w-full min-h-screen bg-zinc-800 text-white pt-1" >
    <form id="uploadForm" class="hidden" action="/fileupload" method="post" enctype="multipart/form-data">
        <input type="file" name="dp" id="dp">
    </form>
    <div class="prof-details flex flex-col items-center mt-20">
        <div class="relative">
            <span id="uploadIcon" class="cursor-pointer bg-zinc-200 w-9 h-9 rounded-full absolute bottom-0 right-0 flex items-center justify-center">
                <i class="text-zinc-800 ri-pencil-line"></i></span>
            <div class="w-32 h-32 bg-zinc-200 rounded-full overflow-hidden">
                <img class="w-full h-full object-cover" src="https://i.pinimg.com/736x/bd/5e/e3/bd5ee3e75d67015c320e8c858ed83ff3.jpg" alt="profile">
            </div>
        </div>
        <h1 class="text-3xl font-semibold mt-5">Junaid Syed</h1>
        <h3 class="text-md">@username</h3>
        <a href="/edit" class="mt-5 px-7 py-2 bg-zinc-700 rounded-full text-sm font-semibold" >Edit</a>
        <button class="px-10 py-2 rounded-lg bg-red-600 mt-3">Add new post</button>
    </div>
    <div class="cards flex flex-wrap gap-7 mt-10">
        <div class="card">
            <div class="w-52 shadow-sm rounded-lg bg-zinc-200 overflow-hidden">
                <img class="w-full h-full object-cover" src="https://i.pinimg.com/564x/8e/9a/b3/8e9ab36670f8abb6e30ea8ee0936e76a.jpg" alt="Pin">
            </div>
            <h3 class="text-xl font-semibold mt-3">All Pins</h3>
            <h5 class="text-sm font-medium opacity-60">28 Pins</h5>
        </div>
        
    </div>
</div>

<script>
    document.querySelector('#uploadIcon').addEventListener('click', function(){
        document.querySelector('#uploadForm input').click();
    });

    document.querySelector('#uploadForm input').addEventListener('change', function(){
        document.querySelector('#uploadForm').submit();
    });
</script>

