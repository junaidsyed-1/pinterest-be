<% include ./partials/header.ejs %>

<div class="profile w-full min-h-screen bg-zinc-800 text-white pt-1 px-10" >
    <form id="uploadForm" class="hidden" action="/fileupload" method="post" enctype="multipart/form-data">
        <input type="file" name="dp" id="dp">
    </form>
    <div class="prof-details flex flex-col items-center mt-8">
        <div class="relative">
            <span id="uploadIcon" class="cursor-pointer bg-zinc-200 w-9 h-9 rounded-full absolute bottom-0 right-0 flex items-center justify-center">
                <i class="text-zinc-800 ri-pencil-line"></i></span>
            <div class="w-32 h-32 bg-zinc-200 rounded-full overflow-hidden">
                <img class="w-full h-full object-cover" src="/images/uploads/<%= user.profileimage %>" alt="profile">
            </div>
        </div>
        <h1 class="text-3xl font-semibold mt-5">Junaid Syed</h1>
        <h3 class="text-md">@<%= user.username%></h3>
        <a href="/edit" class="mt-5 px-7 py-2 bg-zinc-700 rounded-full text-sm font-semibold" >Edit</a>
        <a href="/add" class="px-10 py-2 rounded-lg bg-red-600 mt-3">Add new post</a>
    </div>
    <div class="cards flex flex-wrap gap-7 mt-10">
        <div class="card">
            <div class="w-52 shadow-sm rounded-lg bg-zinc-200 overflow-hidden">
                <img class="w-full h-full object-cover" src="/images/uploads/<%= user?.posts[0]?.image %>" alt="Pin">
            </div>
            <a href="/show/posts" class="inline-block text-xl font-semibold mt-2">Your Pins</a>
            <h5 class="text-sm font-medium opacity-60"><%= user.posts.length %> Pins</h5>
        </div>
        
    </div>
</div>

<script>
    document.querySelector('#uploadIcon').addEventListener('click', function(){
        document.querySelector('#uploadForm input').click();
    });

    document.querySelector('#uploadForm input').addEventListener('change', function(){
        document.querySelector('#uploadForm').submit();
    });
</script>

<% include ./partials/footer.ejs %>